{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "types": ["reflect-metadata", "jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "dom"]
  },
  "files": ["global.d.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/Tests"]
}
